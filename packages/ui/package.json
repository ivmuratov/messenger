{
  "name": "ui",
  "version": "1.0.0",
  "type": "module",
  "sideEffects": [
    "**/*.css",
    "**/*.css.ts"
  ],
  "scripts": {
    "dev:web": "tsdown --watch --config-loader unrun",
    "dev:native": "tsdown --config tsdown.native.config.ts --watch --no-clean --config-loader unrun",
    "dev": "concurrently \"pnpm run dev:web\" \"pnpm run dev:native\"",
    "build:web": "tsdown --config-loader unrun",
    "build:native": "tsdown --config tsdown.native.config.ts --config-loader unrun",
    "build": "concurrently \"pnpm run build:web\" \"pnpm run build:native\"",
    "lint": "eslint src",
    "typecheck": "tsc --noEmit",
    "format": "prettier src --write --ignore-path ../../.prettierignore",
    "format:check": "prettier src --check --ignore-path ../../.prettierignore",
    "clean": "rm -rf dist dist-native"
  },
  "peerDependencies": {
    "react": "19.1.0",
    "react-native": "0.81.5"
  },
  "devDependencies": {
    "@types/react": "19.1.17",
    "@vanilla-extract/css": "1.17.4",
    "@vanilla-extract/rollup-plugin": "1.5.1",
    "tsdown": "0.20.1",
    "typescript": "5.9.3"
  },
  "exports": {
    ".": {
      "react-native": {
        "import": "./dist-native/index.native.mjs",
        "types": "./dist-native/index.native.d.mts",
        "default": "./dist-native/index.native.mjs"
      },
      "types": "./dist/index.d.mts",
      "default": "./dist/index.mjs"
    },
    "./styles.css": "./dist/index.css"
  }
}
